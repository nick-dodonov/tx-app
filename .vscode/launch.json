{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "xmake",
            "request": "launch",
            "name": "Demo Debug",
            "target": "tx-app-demo",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false
        },
        // https://xmake.io/guide/best-practices/faq.html#breakpoint-debugging
        // Attach to debugger after: xrepo env -y -b emmylua_debugger -- xmake f -yc
        {
            "type": "emmylua_new",
            "request": "launch",
            "name": "XMake Attach",
            "host": "localhost",
            "port": 9966,
            "ext": [
                ".lua",
                ".lua.txt",
                ".lua.bytes"
            ],
            "ideConnectDebugger": true
        }
    ]
}